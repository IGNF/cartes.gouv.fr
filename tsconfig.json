{
    "compilerOptions": {
        "target": "ESNext",
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "noImplicitAny": false, // mettre à true après avoir passé tous les fichiers en typescript
        "resolveJsonModule": true
    },
    "include": ["assets"],
    "exclude": ["node_modules", "public", "assets/types/entrepot-generated.ts"]
}
